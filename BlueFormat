package mancala;

import java.awt.Color;
import java.awt.Shape;
import java.awt.geom.RoundRectangle2D;

/**
 * The BlueFormat class is a Strategy pattern that styles the board with a blue theme. 
 */

public class BlueFormat implements MancalaFormatter{

	public Color formatStoneColor() {
		return Color.CYAN;
	}

	public Color formatOutlineColor() {
		return Color.BLUE;
	}
	
	public Color formatBoardBackground() {
		return Color.WHITE;
	}

	public Shape formatBoardShape() {
		return new RoundRectangle2D.Double(10, 10, MancalaBoard.BOARD_WIDTH, MancalaBoard.BOARD_HEIGHT, 20, 20);
	}

	public Shape formatPitShape() {
		return new RoundRectangle2D.Double(20, 20, MancalaBoard.PIT_WIDHT, MancalaBoard.BOARD_HEIGHT, 20, 20);
	}

}
